/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "experimentalDecorators": true,
    "paths": {
      "@app/*": [ "src/app/*" ],
      "@env/*": [ "src/environments/*" ],
      "@angular/*": ["../node_modules/@angular/*"]
    } 
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
